<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.vPhone"
             Title="vPhone">
    <VerticalStackLayout Spacing="20" Margin="10">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Info Telephone" HorizontalOptions="Center" FontSize="22" />
        <Label HeightRequest="240" FontSize="22" HorizontalOptions="Center" x:Name="lbPhoneInfo"/>
    </VerticalStackLayout>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ecran" Clicked="Ecran_Clicked" IconImageSource="{FontImage Glyph='+', Color=White, Size=22}" />
        <ToolbarItem Text="Batterie" Clicked="Button_Clicked" />
    </ContentPage.ToolbarItems>
</ContentPage>